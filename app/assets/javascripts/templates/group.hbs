<div class="row-fluid">
  <p id="basic-group-info" class="text-info text-center">
    <strong><span id="my-name" class="muted"></span></strong>
  </p>
</div>


{{#if new_deal }}

  <div class="alert alert-success">
    <p><strong>A deal is made between {{new_deal.submitter}} and {{new_deal.acceptor}}, please press this button to continue</strong>
    </p>
    <button class="btn btn-success" id="next-round">next round</button>
  </div>
{{/if }}

{{#if wait_others }}
  <div class="alert alert-info">
    <strong>Wait others to confirm</strong>
  </div>
{{/if }}


<div class="row-fluid">
  <table class="table" id="statistics">
    <thead>
      <tr>
        <th>#</th>
        {{#each users}}
          <th>{{ this.username }}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>total_earnings</td>
        {{#each total_earnings}}
          <td>{{ this }}</td>
        {{/each}}
      </tr>
      <tr>
        <td>last_earnings</td>
        {{#each last_earnings}}
          <td>{{ this }}</td>
        {{/each}}
      </tr>
    </tbody>
  </table>
</div>

<div id="opponents"></div>